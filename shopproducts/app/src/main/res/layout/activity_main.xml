<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="503dp">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Media -->
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/beat_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <!-- Title, secondary and supporting text -->
                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/aguafina_script"
                                android:hint="Beat Sedan"
                                android:textColor="@color/black"
                                android:textColorHint="@color/textTitleCard"
                                android:textSize="36sp"
                                android:textStyle="bold"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Limited time promotion"
                                android:textStyle="bold"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="$ 10000.00"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="135dp"
                                android:layout_marginTop="63dp"
                                android:hint="Colors"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                ></TextView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioGroup
                                    android:id="@+id/radioGroup"
                                    android:checkedButton="@+id/radio_button_1"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="35dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <RadioButton
                                        android:id="@+id/radio_button_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:shadowColor="@color/black"
                                        android:textColor="@color/black"
                                        android:textColorHint="@color/black"
                                        app:buttonTint="@color/black" />

                                    <RadioButton
                                        android:id="@+id/radio_button_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:shadowColor="@color/bluePrimary"
                                        android:textColorHint="@color/bluePrimary"
                                        app:buttonTint="@color/bluePrimary" />
                                    <RadioButton
                                        android:id="@+id/radio_button_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:shadowColor="@color/grayCar"
                                        android:textColorHint="@color/grayCar"
                                        app:buttonTint="@color/grayCar" />
                                    <RadioButton
                                        android:id="@+id/radio_button_4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:shadowColor="@color/redCar"
                                        android:textColorHint="@color/redCar"
                                        app:buttonTint="@color/redCar" />
                                </RadioGroup>
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:hint="Features"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:paddingStart="15dp"
                            android:textSize="24sp"></TextView>

                        <!--<ImageView
                            android:id="@+id/Features"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/features" />-->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/engineLiar"
                                    android:layout_width="120dp"
                                    android:layout_height="32dp"
                                    app:srcCompat="@drawable/velocimetro" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/Features"
                                    android:layout_width="120dp"
                                    android:layout_height="32dp"
                                    app:srcCompat="@drawable/car_grip" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/kilometraje"
                                    android:layout_width="120dp"
                                    android:layout_height="32dp"
                                    app:srcCompat="@drawable/engine" />

                                <!--<Spinner
                                    android:id="@+id/spinnerEngine"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </Spinner>-->
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/BottomLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/BackgroundMain"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="45dp">

                <Button
                    android:id="@+id/purchaseButton"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:onClick="generatePurchase"
                    android:text="Add to cart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    app:backgroundTint="@color/buttonsMain"
                    app:cornerRadius="?attr/dialogPreferredPadding" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginEnd="15dp">

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:onClick="generatePurchase"
                    android:text="send"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    app:backgroundTint="@color/buttonsMain"
                    app:cornerRadius="?attr/dialogPreferredPadding" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>