<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndexTemplate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="85dp"
        >

        <ImageView
            android:id="@+id/carView"
            android:layout_width="187dp"
            android:layout_height="187dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/logocar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="97dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Fristly input your name to begin">

        </TextView>

        <!--<EditText
            android:id="@+id/nameText"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="97dp"
            android:width="250dp">

        </EditText>
        <EditText
            android:id="@+id/idText"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="97dp"
            android:width="250dp">

        </EditText>-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="97dp"
            android:layout_marginBottom="7dp"
            android:hint="input your name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="97dp"
            android:hint="input your id number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp">

            <Button
                android:id="@+id/purchaseButton"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Init"
                android:textColor="@color/buttonsMain"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimaryDark"
                app:cornerRadius="?attr/dialogPreferredPadding" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>